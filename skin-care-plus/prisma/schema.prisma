generator client {
	provider = "prisma-client-js"
}

datasource db {
	provider = "sqlite"
	url      = env("DATABASE_URL")
}

model User {
	id           String   @id @default(cuid())
	email        String   @unique
	name         String?
	skinType     String?
	concerns     String[]
	createdAt    DateTime @default(now())
	updatedAt    DateTime @updatedAt
	logs         SkinLog[]
}

model SkinLog {
	id           String   @id @default(cuid())
	userId       String
	note         String?
	photoUrl     String?
	concerns     String[]
	createdAt    DateTime @default(now())

	user         User     @relation(fields: [userId], references: [id])
}
